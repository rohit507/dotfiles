# Config File for Dotfile Bootstrap System

# YADM and Setup Settings #
# ======================= #

# Global configuration file for the bootstrap process.

# General Settings #
# ---------------- #

# Environment variables that we should be able to us in this file. Variables will
# work in this field.
IMPORTED_ENV_VARS:
  - HOME
  - USER

# The root directory where the setup project is stored along with the yadm repository
YADM_ROOT: ${HOME}/.yadm

# Directory where we store logs/metadata about whether a particular operation
# has been run or not.
STATUS_DIR: ${YADM_ROOT}/.status

# Directory for various temporary install files we download and use
INSTALL_DIR: ${YADM_ROOT}/.install

# Directory where we store fonts we want to install
FONTS_DIR: ${YADM_ROOT}/fonts

# Other Packages we want to install by default
DEFAULT_PACKAGES:
  - gimp
  - inkscape
  - lxc
  - lxd
  - lxd-tools
  - virtualbox
  - cinnamon
  - vlc
  - evince
  - git-gui
  - graphviz
  - gzip
  - hexchat
  - imagemagick
  - python3
  - python3-pip
  - subversion
  - tree
  - unzip
  - vagrant-libvirt
  - vagrant-lxc
  - vagrant-mutate
  - vagrant-sshfs
  - zip
  - build-essential

# GTK and icon Themes we want to install
THEME_PACKAGES:
  - blackbird-gtk-theme
  - papirus-icon-theme
  - numix-gtk-theme
  - numix-blue-gtk-theme
  - numix-icon-theme
  - materia-gtk-theme

# the version of GHC that haskell IDE engine should be
# installed for.
HASKELL_IDE_ENGINE_VERSION: 8.4.3
